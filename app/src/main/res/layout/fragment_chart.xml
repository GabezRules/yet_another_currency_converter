<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/selectCurrencyDesc"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:text="Select your currency"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/seeAllCurrencies"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:text="SEE ALL"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toRightOf="@id/otherCurrency"
        app:layout_constraintTop_toBottomOf="@id/seeAllCurrencies" />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/noFavsAlert"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/seeAllCurrencies"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <TextView
            android:fontFamily="@font/montserrat_bold"
            android:text="No favourite currencies found!"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_medium"
            android:text="Click SEE ALL and feel free to add some :)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/otherCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seeAllCurrencies">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/currencyView"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:src="@android:color/transparent"
            app:backgroundTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/otherCurrencyText"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:elevation="16sp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="PLN"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/dateFromDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="FROM: "
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dateFromContainer"
        app:layout_constraintTop_toBottomOf="@id/favsRecyclerView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateFromContainer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/dateFromDesc"
        app:layout_constraintLeft_toRightOf="@id/dateFromDesc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dateFromDesc"
        app:startIconDrawable="@drawable/ic_calendar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateFromBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yyyy-mm-dd"
            android:inputType="date" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/dateToDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="TO: "
        app:layout_constraintRight_toLeftOf="@id/dateToContainer"
        app:layout_constraintTop_toBottomOf="@id/dateFromContainer" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateToContainer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/dateToDesc"
        app:layout_constraintRight_toRightOf="@id/dateFromContainer"
        app:layout_constraintTop_toTopOf="@id/dateToDesc"
        app:startIconDrawable="@drawable/ic_calendar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateToBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yyyy-mm-dd"
            android:inputType="date" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/chosenCurrencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Chosen currency: PLN"
        app:layout_constraintBottom_toTopOf="@id/generateChartButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/generateChartButton"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="GENERATE"
        app:layout_constraintBottom_toTopOf="@id/lineChart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:padding="9dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>